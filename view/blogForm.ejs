<%- include('layouts/header') -%>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong><%= message%></strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('layouts/sidebar') -%>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('layouts/navbar') -%>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h3 mb-0 text-gray-800">BLOG</h1>
        </div>

        <!--Form Begin-->

        <div class="container">
          <div class="card" style="width: 50rem">
            <div class="card-body">
              <p class="card-text"></p>
              <div class="row">
                <div class="col-lg-7 mx-auto">
                  <div class="card mt-2 mx-auto p-4 bg-light">
                    <div class="card-body bg-light">
                      <div class="container">
                        <form
                          action="/blog-insert"
                          method="post"
                          id="contact-form"
                          role="form"
                          enctype="multipart/form-data"
                        >
                          <div class="controls">
                            <div class="row">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label for="form_name">Title </label>
                                  <input
                                    id="title"
                                    type="text"
                                    name="title"
                                    class="form-control"
                                    required="required"
                                    data-error="Title is required."
                                  />
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label for="form_name"
                                    >Publishing Date
                                  </label>
                                  <input
                                    id="date"
                                    type="date"
                                    name="date"
                                    class="form-control"
                                    required="required"
                                    data-error="Date is required."
                                  />
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label for="form_name">Writer </label>
                                  <input
                                    id="writer"
                                    type="text"
                                    name="writer"
                                    class="form-control"
                                    required="required"
                                    data-error="Writer is required."
                                  />
                                </div>
                              </div>
                              <div class="row">
                                <div class="col-md-12">
                                  <div class="form-group">
                                    <label for="form_name"
                                      >Content Image
                                    </label>
                                    <input
                                      id="image"
                                      type="file"
                                      name="image"
                                      class="form-control"
                                      required="required"
                                      data-error="Image is required."
                                    />
                                  </div>
                                </div>
                              </div>
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label for="form_lastname">Content *</label>
                                  <input
                                    id="content"
                                    type="text"
                                    name="content"
                                    class="form-control"
                                    required="required"
                                    data-error="Answer is required."
                                  />
                                </div>
                              </div>
                            </div>

                            <div class="row">
                              <div class="col-md-12">
                                <input
                                  type="submit"
                                  class="btn btn-success btn-send pt-2 btn-block"
                                  value="Send"
                                />
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!--Form end-->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('layouts/footerText') -%>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%- include('layouts/footer') -%>
